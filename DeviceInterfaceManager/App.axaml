<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:DeviceInterfaceManager"
             xmlns:sty="using:FluentAvalonia.Styling"
             x:Class="DeviceInterfaceManager.App"
             x:CompileBindings="True"
             RequestedThemeVariant="Dark">

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <sty:FluentAvaloniaTheme UseSystemFontOnWindows="True" PreferUserAccentColor="True" PreferSystemTheme="False" />
        <StyleInclude Source="Assets/Icons.axaml" />
        <StyleInclude Source="Styles/AutoCompleteBoxClearStyle.axaml" />
        <StyleInclude Source="Styles/ButtonClearStyle.axaml" />
        <StyleInclude Source="avares://FluentAvalonia.ProgressRing/Styling/Controls/ProgressRing.axaml" />
    </Application.Styles>

</Application>